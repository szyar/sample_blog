<h1>Blogs Contents</h1>
<p><%= notice %></p>
<table>
    <tr>
        <th>Title</th>
        <th>Contents</th>
    </tr>
    <% @blogs.each do |blog| %>
    <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Check details', blog_path(blog.id) %></td>
        <td><%= link_to 'Edit blog', edit_blog_path(blog.id) %></td>
        <td><%= link_to'Delete blog', blog_path(blog.id), method: :delete ,data: {confirm:'Are you sure you want to delete? '} %></td>
    </tr>
    <% end %>
</table>
<p> <%= link_to'Post new blog', new_blog_path %>